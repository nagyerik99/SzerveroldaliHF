<%- include('header') %>
  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 15px;">
            <div class="card-body p-md-4">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                  <%- include('errorbox') %> 
                  <form method="post" class="mx-1 mx-md-4">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <p style="padding: 0px 0px 10px 0px"><i class="fas fa-user fa-lg me-3 fa-fw"></i></p>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="name" name="name" class="form-control" value="<%= (typeof data.name === 'undefined') ? '' : data.name %> " />
                        <label class="form-label" for="name">Your Name</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <p style="padding: 0px 0px 10px 0px"><i class="fas fa-envelope  fa-lg me-3 fa-fw"></i></p>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" id="email" name="email" class="form-control"  value="<%= (typeof data.email === 'undefined') ? '' : data.email %> "/>
                        <label class="form-label" for="email">Your Email</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <p style="padding: 0px 0px 10px 0px"><i class="fas fa-door-closed fa-lg me-3 fa-fw"></i></p>
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="door_number" name="door_number" class="form-control"  value="<%= (typeof data.door_number === 'undefined') ? '' : data.door_number %> "/>
                        <label class="form-label" for="door_number">Door Number</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <p style="padding: 0px 0px 10px 0px"><i class="fas fa-lock fa-lg me-3 fa-fw"></i></p>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="password" name="password" class="form-control" />
                        <label class="form-label" for="password">Password</label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <p style="padding: 0px 0px 10px 0px"><i class="fas fa-key fa-lg me-3 fa-fw"></i></p>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="repeat_password" name="repeat_password" class="form-control" />
                        <label class="form-label" for="repeat_password">Repeat your password</label>
                      </div>
                    </div>

                    <div class="form-outline flex-fill pl-4">
                      <a href="login">Back to login</a>
                    </div>


                    <div class="d-flex float-right  mb-4 mb-lg-4">
                      <button type="submit" href="/registration" class="btn btn-primary btn-lg">Register</button>
                    </div>

                  </form>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  <img src="rent_logo.png" class="img-fluid" alt="Sample image">

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('footer') %>